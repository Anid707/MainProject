<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Master Suite" parallel="classes" thread-count="3">
    <listeners>
        <listener class-name="listeners.Listeners" />
    </listeners>
    <parameter name="url" value="https://demo.koel.dev"/>
    <parameter name="username" value="demo@koel.dev"/>
    <parameter name="password" value="demo"/>
    <parameter name="browser" value="chrome"/>
    <test name="Selenium Tests">
        <classes>
            <class name="pageObjectTests.LoginTest">
                <methods>
                    <include name="loginToApp_correctCredentials_loggedToApp"/>
                    <include name="loginToApp_incorrectCredentials_redFrame"/>
                    <include name="loginToApp_correctCredentials_loggedToApp1"/>
                    <include name="loginToApp_incorrectCredentials_redFrame1"/>
                    <include name="loginToApp_correctCredentials_loggedToApp2"/>
                    <include name="loginToApp_incorrectCredentials_redFrame2"/>
                    <include name="loginToApp_correctCredentials_loggedToApp3"/>
                    <include name="loginToApp_incorrectCredentials_redFrame3"/>
                </methods>
            </class>
            <class name="pageObjectTests.LoginTestFactory">
                <methods>
                    <include name="loginToAppFactory_correctCredentials_loggedToApp"/>
                    <include name="loginToAppFactory_incorrectCredentials_redFrame"/>
                    <include name="loginToAppFactory_correctCredentials_loggedToApp1"/>
                    <include name="loginToAppFactory_incorrectCredentials_redFrame1"/>
                    <include name="loginToAppFactory_correctCredentials_loggedToApp2"/>
                    <include name="loginToAppFactory_incorrectCredentials_redFrame2"/>
                    <include name="loginToAppFactory_correctCredentials_loggedToApp3"/>
                    <include name="loginToAppFactory_incorrectCredentials_redFrame3"/>
                </methods>
            </class>
            <class name="pageObjectTests.PlaylistTest">
                <methods>
                    <include name="flakyTest"/>
                    <include name="playlist_createPlaylist_playlistCreated"/>
                    <include name="playlist_renamePlaylist_playlistRenamed"/>
                    <include name="playlist_createPlaylist_playlistCreated1"/>
                    <include name="playlist_renamePlaylist_playlistRenamed1"/>
                    <include name="playlist_createPlaylist_playlistCreated2"/>
                    <include name="playlist_renamePlaylist_playlistRenamed2"/>
                    <include name="playlist_createPlaylist_playlistCreated3"/>
                    <exclude name="playlist_renamePlaylist_playlistRenamed3"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
